<mvc:View controllerName="profile.controller.App" width="100%" height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:table="sap.ui.table"
    xmlns="sap.m">
    <Panel id="carouselContainer" expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin">
        <headerToolbar>
            <OverflowToolbar style="Clear">
                <Title id="Title1" text="{i18n>profile.Toolbar1}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <f:SimpleForm id="SimpleFormIdSel" editable="true" layout="ResponsiveGridLayout" columnsM="2" columnsL="3" columnsXL="4" adjustLabelSpan="true" singleContainerFullSize="true" ariaLabelledBy="Title1">
                <f:content>
                    <Label text="{i18n>profile.scnId}" required="true"/>
                    <Input id="scnId" value="{/scnId}" change="loadProfile">
                    </Input>
                    <Image id="Profile" src="{/data/avatar/profile}" height="45px" width="45px"></Image>
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm id="SimpleFormProfileDetails" editable="false" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" adjustLabelSpan="true" singleContainerFullSize="true" ariaLabelledBy="Title1">
                <f:content>
                    <Label text="{i18n>profile.login}"/>
                    <Text id="login" text="{/data/login}"></Text>
                    <Label text="{i18n>profile.url}"/>
                    <Link id="viewHref" href="{/data/view_href}" text="{/data/view_href}"></Link>
                    <Label text="First Name"/>
                    <Text id="firstName" text="{/data/first_name}"></Text>
                    <Label text="Last Name"/>
                    <Text id="lastName" text="{/data/last_name}"></Text>
                    <Label text="Rank"/>
                    <Text id="rank" text="{/data/rank/name}"></Text>

                </f:content>
            </f:SimpleForm>
        </content>
    </Panel>


    <Panel id="signaturePanel" expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin">
        <headerToolbar>
            <OverflowToolbar style="Clear">
                <Title id="Title2" text="{i18n>profile.Toolbar2}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <f:SimpleForm id="SimpleFormSignature" editable="false" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="true" ariaLabelledBy="Title2">
                <f:content>
                    <Label text="{i18n>profile.signaturePreview}" />
                    <Image id="sigPreview" src="{/signatureURL}">
                    </Image>
                    <Label text="{i18n>profile.signature}" />
                    <Text id="sig" text="{/signatureFull}"></Text>

                    <Label text="Badge #1" />
                    <Text id="badge1" text="{/badge1}"></Text>
                    <Image id="badge1URL" src="{/badge1URL}" height="25px" width="25px"></Image>
                    <Label text="Badge #2" />
                    <Text id="badge2" text="{/badge2}"></Text>
                    <Image id="badge2URL" src="{/badge2URL}" height="25px" width="25px"></Image>
                    <Label text="Badge #3" />
                    <Text id="badge3" text="{/badge3}"></Text>
                    <Image id="badge3URL" src="{/badge3URL}" height="25px" width="25px"></Image>
                    <Label text="Badge #4" />
                    <Text id="badge4" text="{/badge4}"></Text>
                    <Image id="badge4URL" src="{/badge4URL}" height="25px" width="25px"></Image>
                    <Label text="Badge #5" />
                    <Text id="badge5" text="{/badge5}"></Text>
                    <Image id="badge5URL" src="{/badge5URL}" height="25px" width="25px"></Image>
                </f:content>
            </f:SimpleForm>
        </content>
    </Panel>


    <Panel id="badgePanel" expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin">
        <headerToolbar>
            <OverflowToolbar style="Clear">
                <Title id="Title3" text="{i18n>profile.badges}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <f:SimpleForm id="SimpleFormBadges" editable="false" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="true" ariaLabelledBy="Title2">
                <table:Table id="badgesTable" selectionMode="None" visibleRowCount="10" enableSelectAll="false" rows="{/data/user_badges/items}" threshold="15" enableBusyIndicator="true">
                    <table:noData>
                        <BusyIndicator class="sapUiMediumMargin"/>
                    </table:noData>
                    <table:columns>
                        <table:Column width="11rem">
                            <Label text="Id" />
                            <table:template>
                                <Text text="{badge/id}" wrapping="false" />
                            </table:template>
                        </table:Column>
                        <table:Column width="11rem" filterProperty="badge/title">
                            <Label text="Title" />
                            <table:template>
                                <Text text="{badge/title}" wrapping="true" />
                            </table:template>
                        </table:Column>
                        <table:Column width="11rem">
                            <Label text="Title" />
                            <table:template>
                                <Image src="{badge/icon_url}" height="100px" width="100px" />
                            </table:template>
                        </table:Column>
                        <table:Column width="11rem" sortProperty="selected">
                            <Label text="Select" />
                            <table:template>
                                <CheckBox selected="{
								path: 'selected',                                
								type: 'sap.ui.model.type.String'
							}" select="selectBadge"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="11rem" sortProperty="earned_date">
                            <Label text="Earned" />

                            <table:template>
                                <Text text="{
                                    path: 'earned_date'
                                }" />
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </f:SimpleForm>
        </content>
    </Panel>

</mvc:View>